        <section class="py-0">
            <div class="bg-holder" style="background-image:url(assets/img/illustrations/bg.png);background-position:left center;background-size:auto 816px;"></div>
            <!--/.bg-holder-->
            <div class="container">
                <div class="row align-items-center min-vh-100">
                    <div class="col-md-7 col-xl-7 pt-9 text-md-start text-center">
                        <h1 class="display-2 text-light fw-thin">We provide the best <br class="d-none d-xl-block" />value <strong class="fw-bolder">insurance </strong></h1>
                        <p class="fs-2 text-400">Simple Steps You Can Take to Improve Your <br class="d-none d-xxl-block" />Financial Well-Being for the rest of Your Life </p><a class="btn btn-primary btn-ensurance mt-5" href="#!"><span class="fas fa-chevron-right fa-xs btn-icon"></span><span class="btn-text">Learn more</span></a>
                    </div>
                    <div class="col-md-5 col-xl-5 pe-xxl-0">
                        <div class="card card-bg shadow hero-header-form">
                            <div class="card-body p-4 p-xl-6">
                                <h2 class="text-100 text-center">Add Staff</h2>
                                
                                <form class="mb-3" action="staff" method="post">
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingFirstName" type="text" placeholder="first name" name="staff_fname" />
                                        <label for="floatingFirstName">First Name</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingLastName" type="text" placeholder="last name" name="staff_lname" />
                                        <label for="floatingLastName">Last Name</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingDOB" type="text" placeholder="address" name="staff_address" />
                                        <label for="floatingDOB">Address </label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingGender" type="number" placeholder="contact" name="staff_contact" />
                                        <label for="floatingGender">Contact Number</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingDOB" type="text" placeholder="gender" name="staff_gender" />
                                        <label for="floatingDOB">Gender</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <select class="form-select" id="staff_marital_status" name="staff_marital_status">
                                            <option value="married">Married</option>
                                            <option value="single">Single</option>
                                        </select>
                                        <label for="staff_marital_status">Marital Status</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingDOB" type="text" placeholder="nationality" name="staff_nationality" />
                                        <label for="floatingDOB">Nationality</label>
                            
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingDOB" type="text" placeholder="qualification" name="staff_qualification" />
                                        <label for="floatingDOB">Qualification</label>
                            
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingDOB" type="number" placeholder="allowance" name="staff_allowance" />
                                        <label for="floatingDOB">Allowance</label>
                            
                                    </div>
                                        <div class="form-floating mb-3">
                                        <input class="form-control input-box form-ensurance-header-control" id="floatingDOB" type="number" placeholder="pps number" name="staff_pps_number" />
                                        <label for="floatingDOB">PPS Number</label>
                            
                                    </div>
                                        
                                
                                    <div class="col-12 d-grid">
                                        <button class="btn btn-primary rounded-pill" type="submit">Submit</button>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- <section> close ============================-->
        <!-- ============================================-->



        <!-- ============================================-->
        <!-- <section> begin ============================-->
        <section id="news">
            <div class="container">
                <div class="row">
                    <h2 class="text-light text-center my-5">Staff</h2>
                </div>
                <div class="row flex-center h-100 circle-blend circle-blend-left circle-primary">
                    <div class="col-12">
                        <div class="row align-items-center circle-blend circle-blend-right circle-warning">
                            <% for(app of staff ) { %>
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card p-3 h-100 card-soft-primary">
                                        <div class="card-body">
                                            <div class="d-flex flex-between-center">
                                                <p class="fw-normal mb-0 text-400">Staff id &nbsp; &nbsp;<%= app.staff_id %></p>
                                                
                                            </div>
                                            <h5 class="fw-bold fs-2 text-200 my-3"><%= app.staff_fname %>&nbsp; <%= app.staff_lname %></h5>
                                            <p class="text-400">Address : <%= app.staff_address %></p>
                                            <p class="text-400">Gender : <%= app.staff_gender %></p>
                                            <p class="text-400">Contact&nbsp; <%= app.staff_contact %></p>
                                            <p class="text-400">Email &nbsp;<%= app.cust_email %></p>
                                            <p class="text-400">Marital Status &nbsp;<%= app.staff_marital_status %></p>
                                            <p class="text-400">Nationality &nbsp;<%= app.staff_nationality %></p>
                                            <p class="text-400">Qualification &nbsp;<%= app.staff_qualification %></p>
                                            <p class="text-400">Allowance &nbsp;<%= app.staff_allowance %></p>
                                            <p class="text-400">PPS No: &nbsp;<%= app.staff_pps_number%></p>


                                            <a class="link-primary" href="<%= app.cust_id %>/application">
                                                <svg class="bi bi-arrow-right text-primary" xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"></path>
                                                </svg>
                                            </a>
                                            <a class="link-danger" href="staff/delete/<%= app.staff_id %>">
                                                <svg class="bi bi-trash text-danger" xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M2.5 5.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5V6h-11v-.5zm5-3a.5.5 0 0 1 .5.5V3h1V2.5a.5.5 0 0 1 1 0V3h1V2.5a.5.5 0 0 1 1 0V3h1V2.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H2a.5.5 0 0 1-.5-.5V2h11v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h1V2H8v1h1V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H9V3h1v-.5a.5.5 0 0 1-.5-.5v-1z"/>
                                                    <path fill-rule="evenodd" d="M5.5 10.5a.5.5 0 0 1 .5.5V13a.5.5 0 0 1-1 0V11h-.5a.5.5 0 0 1 0-1h.5zm5 0a.5.5 0 0 1 .5.5V13a.5.5 0 0 1-1 0V11h-.5a.5.5 0 0 1 0-1h.5z"/>
                                                </svg>
                                                Delete Staff
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                    </div>
                </div>
                
            </div>  
            <!-- end of .container-->
        </section>
